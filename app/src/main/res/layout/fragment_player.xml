<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_player_screen"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!-- Header Toolbar  -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/StyleToolBarBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <!-- Album Image  -->
            <ImageView
                android:id="@+id/image_album"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="26dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Track name  -->
            <TextView
                android:id="@+id/track_name"
                style="@style/TrackName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_album" />

            <!-- Artist name  -->
            <TextView
                android:id="@+id/artist_name"
                style="@style/ArtistName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toBottomOf="@+id/track_name" />

            <!-- Button add to playlist  -->
            <ImageView
                android:id="@+id/button_add_to_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_button_add_to_playlist"
                app:layout_constraintBottom_toBottomOf="@+id/button_play"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button_play" />

            <!-- Button play/pause  -->
            <ImageView
                android:id="@+id/button_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_button_play"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/artist_name" />

            <!-- Button add to favorite  -->
            <ImageView
                android:id="@+id/button_add_to_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_button_add_to_favorite"
                app:layout_constraintBottom_toBottomOf="@+id/button_play"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button_play" />

            <!-- Track play timer  -->
            <TextView
                android:id="@+id/text_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/ys_display_medium"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/button_play"
                app:layout_constraintStart_toStartOf="@+id/button_play"
                app:layout_constraintTop_toBottomOf="@+id/button_play" />

            <!-- Duration -->
            <TextView
                android:id="@+id/label_duration"
                style="@style/TextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="@string/duration"
                app:layout_constraintStart_toEndOf="@+id/text_timer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_timer" />

            <TextView
                android:id="@+id/value_duration"
                style="@style/TextValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                app:layout_constraintBaseline_toBaselineOf="@id/label_duration"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Album -->
            <TextView
                android:id="@+id/label_album"
                style="@style/TextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="@string/album"
                app:layout_constraintStart_toStartOf="@id/label_duration"
                app:layout_constraintTop_toBottomOf="@id/label_duration" />

            <TextView
                android:id="@+id/value_album"
                style="@style/TextValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                app:layout_constraintBaseline_toBaselineOf="@id/label_album"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="label_album,value_album" />

            <!-- Year -->
            <TextView
                android:id="@+id/label_year"
                style="@style/TextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="@string/year"
                app:layout_constraintStart_toStartOf="@id/label_duration"
                app:layout_constraintTop_toBottomOf="@id/label_album" />

            <TextView
                android:id="@+id/value_year"
                style="@style/TextValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                app:layout_constraintBaseline_toBaselineOf="@id/label_year"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="label_year,value_year" />

            <!-- Genre -->
            <TextView
                android:id="@+id/label_genre"
                style="@style/TextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="@string/genre"
                app:layout_constraintStart_toStartOf="@id/label_duration"
                app:layout_constraintTop_toBottomOf="@id/label_year" />

            <TextView
                android:id="@+id/value_genre"
                style="@style/TextValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                app:layout_constraintBaseline_toBaselineOf="@id/label_genre"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Country -->
            <TextView
                android:id="@+id/label_country"
                style="@style/TextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="@string/country"
                app:layout_constraintStart_toStartOf="@id/label_duration"
                app:layout_constraintTop_toBottomOf="@id/label_genre" />

            <TextView
                android:id="@+id/value_country"
                style="@style/TextValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                app:layout_constraintBaseline_toBaselineOf="@id/label_country"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>